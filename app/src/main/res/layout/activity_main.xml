<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/rootMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activities.MainActivity">

        <LinearLayout
            android:id="@+id/linearProps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNextPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Next Page"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDialogDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DialogDefault"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDialogEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DialogEditText"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDialogNonEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DialogNonEditText"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDialogNonAutoDismiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DialogNonAutoDismiss"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDialogAutoDismiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DialogAutoDismiss"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

</layout>

