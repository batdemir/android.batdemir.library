<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/rootMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.android.batdemir.mylibrary.MySpinnerView
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

        <com.android.batdemir.mylibrary.MyEditTextView
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnOnOffSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Border Off Spinner"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnOnOffEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Border Off EditText"
            android:textAllCaps="false"/>

    </LinearLayout>

</layout>
