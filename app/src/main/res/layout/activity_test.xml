<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/imgChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgGroup"
        android:layout_alignBottom="@id/imgGroup"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/imgGroup" />

    <ImageView
        android:id="@+id/imgGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/infos"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/infos"
        android:src="@drawable/ic_group" />

    <RelativeLayout
        android:id="@+id/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBox"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#F5F5F5"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imgStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_information_medium" />

        <ImageView
            android:id="@+id/imgEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_information_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/imgEnd"
            android:layout_toEndOf="@+id/imgStart"
            android:fontFamily="@font/roboto"
            android:text="9424304390432192"
            android:textAlignment="center"
            android:textColor="#454f63"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcode"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txtPaletNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/roboto"
            android:text="Palet No"
            android:textColor="#959DAD"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtEditPaletNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPaletNo"
            android:fontFamily="@font/roboto_medium"
            android:text="84731"
            android:textColor="#454f63"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtUrunYili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEditPaletNo"
            android:fontFamily="@font/roboto"
            android:text="Ürün Yili"
            android:textColor="#959DAD"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtEditUrunYili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtUrunYili"
            android:fontFamily="@font/roboto_medium"
            android:text="2019"
            android:textColor="#454f63"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtMensei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEditUrunYili"
            android:fontFamily="@font/roboto"
            android:text="Menşei"
            android:textColor="#959DAD"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtEditMensei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMensei"
            android:fontFamily="@font/roboto_medium"
            android:text="İzmir"
            android:textColor="#454f63"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtHarmanAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEditMensei"
            android:fontFamily="@font/roboto"
            android:text="Harman Adı"
            android:textColor="#959DAD"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtEditHarmanAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHarmanAdi"
            android:fontFamily="@font/roboto_medium"
            android:text="SUN.AG1"
            android:textColor="#454f63"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtHarmanNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEditHarmanAdi"
            android:fontFamily="@font/roboto"
            android:text="Harman No"
            android:textColor="#959DAD"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtEditHarmanNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHarmanNo"
            android:fontFamily="@font/roboto_medium"
            android:text="111"
            android:textColor="#454f63"
            android:textSize="24sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_light"
        android:text="03/18"
        android:textColor="#4E4C4C"
        android:textSize="108sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>