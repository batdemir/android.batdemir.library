<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/rootAlertDialog"
        style="@style/alert_dialog_root">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/alert_dialog_card_view">

            <LinearLayout
                android:id="@+id/linearInner"
                style="@style/alert_dialog_inner">

                <ImageView
                    style="@style/alert_dialog_image_view"
                    android:src="@drawable/ic_information_medium" />

                <TextView
                    android:id="@+id/txtEditMessage"
                    style="@style/alert_dialog_text_view"
                    android:text="Test" />

                <EditText
                    android:id="@+id/editText"
                    style="@style/alert_dialog_edit_text" />

                <LinearLayout
                    android:id="@+id/linearButtons"
                    style="@style/alert_dialog_linear_buttons">

                    <ImageButton
                        android:id="@+id/btnCancel"
                        style="@style/alert_dialog_buttons"
                        android:src="@drawable/ic_cancel_mini" />

                    <ImageButton
                        android:id="@+id/btnOkey"
                        style="@style/alert_dialog_buttons"
                        android:src="@drawable/ic_okey_mini" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</layout>