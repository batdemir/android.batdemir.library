<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--STYLE ALERT DIALOG-->

    <style name="alert_dialog_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="alert_dialog_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="alert_dialog_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">320dp</item>
    </style>

    <style name="alert_dialog_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">TODO</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="alert_dialog_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="alert_dialog_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="alert_dialog_linear_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="alert_dialog_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/alert_dialog_button_colors</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--STYLE TEXT APPEARANCE-->

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ValueTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SubValueTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>